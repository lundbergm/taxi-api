{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2021",
        "sourceMap": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "dist",
        "baseUrl": "src",
        "rootDir": "src",
        "composite": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
